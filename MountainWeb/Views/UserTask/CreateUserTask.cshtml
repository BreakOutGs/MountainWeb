@model MountainWeb.Models.UserTaskViewModels.CreateUserTaskViewModel


@{
    ViewData["Title"] = "Create";
}

<script src="~/Recources/Scripts/UserTaskScripts.js"> </script>


<h1>Створити завдання</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <br />
                <input type="range" min="0" max="100" asp-for="Priority" value="0" class="" onchange="display_Priority(this.value)" />
                <span id="priority_value">0</span>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="width:400px;height:115px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Workspace" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
