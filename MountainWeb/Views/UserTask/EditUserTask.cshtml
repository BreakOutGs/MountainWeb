@model MountainWeb.Models.UserTaskViewModels.EditUserTaskViewModel
@{
    ViewData["Title"] = "Edit";
}
<script src="~/Recources/Scripts/UserTaskScripts.js"></script>

<h1>Редагування завдання</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <br />
                <input type="range" min="0" max="100" asp-for="Priority" value="@Model.Priority" class="" onchange="display_Priority(this.value)" />
                <span id="priority_value">@Model.Priority</span>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис</label>
                <textarea asp-for="Description" class="form-control" style="width:400px;height:115px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> Виконано
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Збереження" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Workspace" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
