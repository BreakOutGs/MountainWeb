@model MountainWeb.Models.AppUser.Edit.EditAvatarVM

<link rel="stylesheet" href="~/Recources/WorkSpaceStyles.css" />
<link rel="stylesheet" href="~/css/Profile/ProfileStyles.css" />
<link href="~/css/MountainStyles.css" rel="stylesheet" />




<div class="M-PageFragment" style="height:500px;">
    <a class="M-Menu1Button" name="Tab" asp-action="EditProfileInfo" asp-controller="User">Дані профілю</a>
    <a class="M-Menu1Button" name="Tab" asp-action="EditPassword" asp-controller="User">Зміна паролю</a>
    <a class="M-Menu1Button" name="Tab" asp-action="EditEmail" asp-controller="User">Зміна пошти</a>
    <a class="M-Menu1Button  M-M1Active" name="Tab" asp-action="EditAvatar" asp-controller="User">Зміна аватарки</a>
</div>
<div class="M-PageFragment" style="height:500px;width:600px; text-align:center;">
    <form asp-action="ChangeAvatar" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="form-group">
           <img src="~/uploads/avatar/@Model.AvatarPath" style="width:250px;height:250px;"/>
        </div>
        <div class="form-group">
           <input type="file" name="file"/>
        </div>

        <button type="submit" class="btn btn-primary">Зберегти</button>
    </form>

</div>
