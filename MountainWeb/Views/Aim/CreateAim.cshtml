@model MountainWeb.Models.AimViewModels.CreateAimViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Створення цілі</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAim">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.WorkspaceId"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис:</label>
                <textarea asp-for="Description" class="form-control" style="width:400px;height:115px"></textarea>
                @*<input asp-for="Description" type="text" class="form-control text-monospace">*@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Workspace" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
