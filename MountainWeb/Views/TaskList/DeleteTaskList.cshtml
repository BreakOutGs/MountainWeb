@model MountainWeb.Models.TaskListViewModels.DeleteTaskListViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення списку</h1>

<h3>Ви впевнені що хочите видалити цей список?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="DeleteTaskList">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-controller="Workspace" asp-action="Index">Назад</a>
    </form>
</div>
